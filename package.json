{
  "name": "react-file-preview",
  "version": "1.0.0",
  "description": "A modern, feature-rich file preview component for React with support for images, videos, audio, PDFs, Office documents, Markdown, and code files.",
  "type": "module",
  "keywords": [
    "react",
    "file-preview",
    "image-viewer",
    "pdf-viewer",
    "video-player",
    "audio-player",
    "document-viewer",
    "markdown-viewer",
    "code-viewer"
  ],
  "homepage": "https://github.com/wh131462/react-file-preview#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wh131462/react-file-preview.git"
  },
  "bugs": {
    "url": "https://github.com/wh131462/react-file-preview/issues"
  },
  "license": "MIT",
  "author": {
    "name": "EternalHeart",
    "email": "hao131462@qq.com",
    "url": "https://github.com/wh131462"
  },
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev": "pnpm copy-pdf-worker && vite",
    "build": "pnpm copy-pdf-worker && tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "copy-pdf-worker": "node -e \"require('fs').copyFileSync('node_modules/pdfjs-dist/build/pdf.worker.min.mjs', 'public/pdf.worker.min.mjs')\"",
    "postinstall": "pnpm copy-pdf-worker",
    "deploy": "pnpm build && pnpm preview",
    "release": "pnpm lint && pnpm build"
  },
  "dependencies": {
    "@types/react-syntax-highlighter": "^15.5.13",
    "@videojs-player/react": "^1.0.0",
    "docx-preview": "^0.3.2",
    "framer-motion": "^11.11.17",
    "lucide-react": "^0.460.0",
    "mammoth": "^1.8.0",
    "pdfjs-dist": "4.8.69",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-pdf": "9.2.1",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "video.js": "^8.23.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  }
}